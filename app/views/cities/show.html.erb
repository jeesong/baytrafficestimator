<h3>From <%= @origin.name %>, driving to:</h3>
<div class="row">
  <div class="medium-12 columns">
    <ul class="small-block-grid-2 medium-block-grid-3">
      <% @cities.each_with_index do |city, idx| %>
        <% unless city.name == @origin.name %>
          <li class="citybox">
            <strong><%= city.name %></strong> will take
            <h3><strong><%= @traveltimes[idx][0] %></strong></h3>
            <h4><small>minutes in current conditions</small></h4>
            <h5><small>(<%= @traveltimes[idx][1] %> minutes in typical conditions)</small></h5>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<br><br>

